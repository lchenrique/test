{
  "name": "evolution-api-server",
  "version": "1.0.0",
  "description": "Servidor para integração com Evolution API seguindo padrões arquiteturais definidos",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch --env-file=.env src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "format": "biome format --write src/",
    "lint": "biome check --apply src/",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "fastify",
    "evolution-api",
    "whatsapp",
    "typescript",
    "zod"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^8.4.0",
    "@fastify/static": "^6.12.0",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^2.1.0",
    "axios": "^1.6.2",
    "fastify": "^4.24.3",
    "fastify-type-provider-zod": "^1.1.9",
    "openai": "^5.12.2",
    "qrcode-terminal": "^0.12.0",
    "ws": "^8.18.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.4.1",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.4",
    "@types/qrcode-terminal": "^0.12.2",
    "@types/ws": "^8.18.1",
    "jest": "^29.7.0",
    "pino-pretty": "^10.3.1",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  }
}